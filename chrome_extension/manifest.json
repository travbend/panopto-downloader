{
    "name": "Panopto Downloader",
    "description": "Download videos from Panopto.",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "https://*.hosted.panopto.com/Panopto/Pages/*"
    ],
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "css": ["scripts/styles.css"],
            "matches": [
                "https://*.hosted.panopto.com/Panopto/Pages/*"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["scripts/popup.html", "scripts/handle-click.js"],
            "matches": ["https://*.hosted.panopto.com/*"]
        }
    ]
  }